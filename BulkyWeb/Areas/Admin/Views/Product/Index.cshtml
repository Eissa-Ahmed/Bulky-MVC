@model IEnumerable<Prouduct>
@{
    ViewData["Title"] = "Product List";
}
<style>
</style>
<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">

            @if (@Model.Count() > 0)
                {
                    <h2 class="text-primary">Product List</h2>
                }
                else
                {
                <h2 class="text-primary">Product Is Empty </h2>
                }
            
        </div>
        <div class="col-6 text-end">
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i>
                Create New Product
            </a>
        </div>
    </div>

    @if (@Model.Count() <= 0)
    {
        <center>
            <img src="~/Images/empty.png" width="600px" />
        </center>
    }
    else
    {
        <table class="table table-striped table-bordered table-hover">
            <thead>
                <tr class="table-dark ">
                    <th class="col-2">Title</th>
                    <th class="col-4">Description</th>
                    <th class="col-2">Author</th>
                    <th class="col-1">List Price</th>
                    <th class="col-2"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {

                    <tr>
                        <td>@item.Title</td>
                        <td>@item.Description</td>
                        <td>@item.Author</td>
                        <td>@item.ListPrice</td>
                        <td>
                            <div class="row">
                                <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-primary col-6"><i class="bi bi-pencil-square"></i></a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger col-6"><i class="bi bi-trash"></i></a>
                            </div>
                        </td>
                    </tr>

                }
            </tbody>
        </table>
    }
</div>