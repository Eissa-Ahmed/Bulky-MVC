@model IEnumerable<Category>
@{
    ViewData["Title"] = "Category List";
}
<style>

</style>
<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">

            @if (@Model.Count() > 0)
                {
                    <h2 class="text-primary">Category List</h2>
                }
                else
                {
                    <h2 class="text-primary">Category Is Empty </h2>
                }
            
        </div>
        <div class="col-6 text-end">
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i>
                Create New Category
            </a>
        </div>
    </div>

    @if (@Model.Count() <= 0)
    {
        <center>
            <img src="~/Images/empty.png" width="600px" />
        </center>
    }
    else
    {
        <table class="table table-striped table-bordered table-hover">
            <thead>
                <tr class="table-dark ">
                    <th class="col-2">Name</th>
                    <th class="col-2">Display Order</th>
                    <th class="col-1"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.OrderBy(o => o.DisplayOrder))
                {

                    <tr>
                        <td>@item.Name</td>
                        <td>@item.DisplayOrder</td>
                        <td>
                            <div class="row">
                                <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-primary col-6"><i class="bi bi-pencil-square"></i></a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger col-6"><i class="bi bi-trash"></i></a>
                            </div>
                        </td>
                    </tr>

                }
            </tbody>
        </table>
    }
</div>